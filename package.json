{
  "name": "@arcaelas/mcp",
  "version": "1.1.0",
  "description": "MCP server providing AI-powered tools for audio generation, image generation, and image redesign using OpenAI-compatible APIs",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "mcp": "build/index.js",
    "arcaelas-mcp": "build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node build/index.js",
    "start:stdio": "node build/index.js --stdio",
    "prepublishOnly": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector tsx src/index.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openai",
    "ai",
    "text-to-speech",
    "tts",
    "image-generation",
    "dall-e",
    "audio-generation",
    "image-redesign"
  ],
  "author": {
    "name": "Miguel Guevara",
    "email": "arcaela.reyes@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arcaelas/mcp"
  },
  "homepage": "https://github.com/arcaelas/mcp#readme",
  "bugs": {
    "url": "https://github.com/arcaelas/mcp/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "express": "^5.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
